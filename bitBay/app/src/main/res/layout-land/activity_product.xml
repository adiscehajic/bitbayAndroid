<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="ba.bitcamp.android.bitbay.Product">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Products"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/button_border"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/button_border">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/ps3a"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title1"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="PlayStation3"
                android:textSize="30sp"
                android:paddingTop="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="300.00 KM"
                android:textSize="20sp"
                android:layout_below="@id/title1"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/button_border">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/samsung"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="Samsung S"
                android:textSize="30sp"
                android:paddingTop="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="100.00 KM"
                android:textSize="20sp"
                android:layout_below="@id/title2"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/button_border">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/dress"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title3"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="Summer Dress"
                android:textSize="30sp"
                android:paddingTop="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="50.00 KM"
                android:textSize="20sp"
                android:layout_below="@id/title3"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/button_border">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/samsungs6a"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title4"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="Samsung s6"
                android:textSize="30sp"
                android:paddingTop="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="600.00 KM"
                android:textSize="20sp"
                android:layout_below="@id/title4"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/button_border">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/ps3a"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title5"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="PlayStation3"
                android:textSize="30sp"
                android:paddingTop="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="300.00 KM"
                android:textSize="20sp"
                android:layout_below="@id/title5"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/button_border">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/samsungs6a"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title6"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="Samsung S5"
                android:textSize="30sp"
                android:paddingTop="20dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:text="600.00 KM"
                android:textSize="20sp"
                android:layout_below="@id/title6"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>